{
  "name": "paralogue-npc-copilot",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && node -e \"const fs=require('fs');const path=require('path');const css=fs.readdirSync('dist/assets').find(f=>f.startsWith('inject-')&&f.endsWith('.css'));if(css)fs.copyFileSync(path.join('dist/assets',css),'dist/inject/index.css');\"",
    "preview": "vite preview",
    "package": "./package-store.sh",
    "package:windows": "npm run build && cd dist && powershell Compress-Archive -Path * -DestinationPath ../paralogue-extension.zip -Force"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.26",
    "@types/chrome": "^0.0.268",
    "@types/node": "^22.7.9",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "vite": "^5.4.10"
  }
}

