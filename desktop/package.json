{
  "name": "gamebao-desktop",
  "version": "0.1.0",
  "description": "GameBao: AI Gaming Copilot - Desktop Application",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build:main": "tsc -p tsconfig.main.json && tsc -p tsconfig.preload.json",
    "build:renderer": "vite build",
    "build": "npm run build:main && npm run build:renderer",
    "check-env": "node scripts/check-env.js",
    "update-icons": "bash scripts/update-icons.sh",
    "build:mac": "npm run build && electron-builder --mac",
    "fix-dmg": "node scripts/fix-dmg-writable.js",
    "build:win": "npm run build && electron-builder --win",
    "build:all": "npm run build && electron-builder --mac --win",
    "preview": "vite preview",
    "electron:dev": "npm run build:main && concurrently \"npm run dev\" \"wait-on http://localhost:5173 http://localhost:5174 && electron dist/main.js\"",
    "electron:build": "npm run build && electron-builder",
    "start": "electron dist/main.js"
  },
  "build": {
    "appId": "com.himalayan.gamebuilder",
    "productName": "Himalayan Game Builder",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns"
    },
    "dmg": {
      "title": "Himalayan Game Builder ${version}",
      "icon": "build/icon.icns",
      "window": {
        "width": 540,
        "height": 380,
        "x": 400,
        "y": 100
      },
      "contents": [
        {
          "x": 130,
          "y": 220,
          "type": "file"
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "background": null,
      "format": "UDZO"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "release"
    }
  },
  "dependencies": {
    "@imgly/background-removal": "^1.7.0",
    "@supabase/supabase-js": "^2.80.0",
    "dotenv": "^17.2.3",
    "electron-store": "^10.0.0",
    "phaser": "^3.90.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.7.9",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "tsx": "^4.20.6",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vite-plugin-electron": "^0.28.0",
    "wait-on": "^8.0.1"
  }
}
